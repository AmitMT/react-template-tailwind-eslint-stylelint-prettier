{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"plugin:react/recommended",
		"airbnb",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"prettier/prettier": [
			"warn",
			{},
			{
				"usePrettierrc": true
			}
		],
		"react/jsx-filename-extension": [
			"warn",
			{
				"extensions": [
					".js",
					".jsx"
				]
			}
		],
		"sort-imports": [
			"error",
			{
				"ignoreCase": false,
				"ignoreDeclarationSort": true,
				"ignoreMemberSort": false
			}
		]
	}
}